{
  "name": "css-grid-animation",
  "version": "1.0.0",
  "description": "A landing page to study and practice CSS Grid and Animation",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compact -o dist/css src/scss",
    "serve": "browser-sync start --server --files 'dist/css/*.css, **/*.html'",
    "watch:css": "onchange 'src/scss' -- npm run scss",
    "start": "run-p serve watch:css"
  },
  "author": "Hector Perea Mosquera",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0"
  }
}
